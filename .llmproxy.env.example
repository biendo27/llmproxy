# CLIProxyAPI connection profiles (example)
# Copy to .llmproxy.env and fill in real keys.

export CLIPROXY_PROFILE="${CLIPROXY_PROFILE:-local}"
export LLMPROXY_MODE="${LLMPROXY_MODE:-proxy}" # proxy | direct
export LLMPROXY_AUTO_SYNC="${LLMPROXY_AUTO_SYNC:-1}" # 1=sync presets to /v1/models

# CLIProxyAPI server paths / run mode
export CLIPROXY_SERVER_DIR="${CLIPROXY_SERVER_DIR:-$HOME/cliproxyapi}"
export CLIPROXY_BIN="${CLIPROXY_BIN:-$CLIPROXY_SERVER_DIR/cli-proxy-api}"
export CLIPROXY_CONFIG="${CLIPROXY_CONFIG:-$CLIPROXY_SERVER_DIR/config.yaml}"
export CLIPROXY_LOG_DIR="${CLIPROXY_LOG_DIR:-$CLIPROXY_SERVER_DIR/logs}"
export CLIPROXY_PID_FILE="${CLIPROXY_PID_FILE:-$CLIPROXY_LOG_DIR/cliproxyapi.pid}"
export CLIPROXY_RUN_LOG="${CLIPROXY_RUN_LOG:-$CLIPROXY_LOG_DIR/cliproxyapi.out.log}"
export CLIPROXY_RUN_MODE="${CLIPROXY_RUN_MODE:-direct}" # direct | systemd
export CLIPROXY_SYSTEMD_SERVICE="${CLIPROXY_SYSTEMD_SERVICE:-cliproxyapi}"

# Profile: local
export CLIPROXY_URL_LOCAL="http://127.0.0.1:8317"
export CLIPROXY_KEY_LOCAL="sk-REPLACE_ME"

# Profile: local2 (optional key rotation)
export CLIPROXY_URL_LOCAL2="$CLIPROXY_URL_LOCAL"
export CLIPROXY_KEY_LOCAL2="sk-REPLACE_ME"

# Pick active profile
case "$CLIPROXY_PROFILE" in
  local2)
    export CLIPROXY_URL="$CLIPROXY_URL_LOCAL2"
    export CLIPROXY_KEY="$CLIPROXY_KEY_LOCAL2"
    ;;
  *)
    export CLIPROXY_URL="$CLIPROXY_URL_LOCAL"
    export CLIPROXY_KEY="$CLIPROXY_KEY_LOCAL"
    ;;
esac

# Claude tier models for the /model selector
export CLIPROXY_CLAUDE_OPUS="claude-opus-4-5-20251101"
export CLIPROXY_CLAUDE_SONNET="claude-sonnet-4-5-20250929"
export CLIPROXY_CLAUDE_HAIKU="claude-haiku-4-5-20251001"

# Codex tier models (used for Opus/Sonnet/Haiku)
export CLIPROXY_CODEX_OPUS="gpt-5.2-codex"
export CLIPROXY_CODEX_SONNET="gpt-5.1-codex-max"
export CLIPROXY_CODEX_HAIKU="gpt-5.1-codex-mini"

# Gemini tier models for the /model selector
export CLIPROXY_GEMINI_OPUS="gemini-3-pro-preview"
export CLIPROXY_GEMINI_SONNET="gemini-3-flash-preview"
export CLIPROXY_GEMINI_HAIKU="gemini-2.5-flash"

# Antigravity single model (optional)
export CLIPROXY_ANTIGRAVITY_MODEL=""

# Codex thinking levels for Opus/Sonnet/Haiku
# Examples: minimal | low | medium | high | xhigh | auto | none
export CLIPROXY_CODEX_THINKING_OPUS="${CLIPROXY_CODEX_THINKING_OPUS:-high}"
export CLIPROXY_CODEX_THINKING_SONNET="${CLIPROXY_CODEX_THINKING_SONNET:-medium}"
export CLIPROXY_CODEX_THINKING_HAIKU="${CLIPROXY_CODEX_THINKING_HAIKU:-low}"

# Thinking level for direct model override (only when CLIPROXY_MODEL is set)
export CLIPROXY_THINKING_LEVEL="${CLIPROXY_THINKING_LEVEL:-}"

# Default selection
# - If CLIPROXY_MODEL is set, it overrides everything.
# - Otherwise CLIPROXY_PRESET selects a service: claude | codex | gemini | antigravity
export CLIPROXY_MODEL="${CLIPROXY_MODEL:-}"
export CLIPROXY_PRESET="${CLIPROXY_PRESET:-claude}"

# Log separator before llmproxy outputs (1=on, 0=off)
export CLIPROXY_LOG_SEP="${CLIPROXY_LOG_SEP:-1}"
